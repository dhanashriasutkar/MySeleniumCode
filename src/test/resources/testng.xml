<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Regression Test" verbose="4" parallel="tests" thread-count="3" >


	<test name="Amazon Test">
	<parameter name="browser" value="chrome" />
	<parameter name="url" value="https://www.amazon.com/" />
		<classes>
			<class name="testNgSessions.AmazonTest" />
		</classes>

	</test>

	<test name="Google Test">
	<parameter name="browser" value="firefox" />
	<parameter name="url" value="https://www.google.com/" />
		<classes>
			<class name="testNgSessions.GoogleTest" />
		</classes>

	</test>

	<test name="Rediff Mail Test">
	<parameter name="browser" value="chrome" />
	<parameter name="url" value="https://www.rediff.com/" />
		<classes>
			<class name="testNgSessions.RediffMailTest" />
		</classes>

	</test>


</suite>